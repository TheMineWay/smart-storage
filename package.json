{
  "name": "smart-storage",
  "version": "1.0.0",
  "description": "A TS/JS library that provides a smart and easy way to store data",
  "homepage": "https://themineway.github.io/smart-storage/",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "pnpm -r run lint",
    "lint:fix": "pnpm -r run lint:fix",
    "js:build": "pnpm --filter './packages/smart-storage-js' build",
    "react:build": "pnpm --filter './packages/smart-storage-react' build",
    "docs:dev": "cd docs && pnpm start",
    "docs:build": "cd docs && pnpm build",
    "docs:clean": "cd docs && pnpm clean",
    "clean:all": "find . -type d \\( -name \"node_modules\" -or -name \"dist\" -or -name \"test-results\" -or -name \"playwright-report\" -or -name \".docusaurus\" -or -name \"build\" \\) -exec rm -rf {} +"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TheMineWay/smart-storage"
  },
  "keywords": [
    "web",
    "storage"
  ],
  "author": "TheMineWay",
  "license": "MIT",
  "packageManager": "pnpm@10.8.0",
  "devDependencies": {
    "@vitest/ui": "^3.2.2",
    "vitest": "^3.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
